<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                          http://www.springframework.org/schema/beans/spring-beans.xsd
                          http://code.alibabatech.com/schema/dubbo
                          http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--当前项目在整个分布式架构里面的唯一名称，计算依赖关系的标签 -->
    <dubbo:application name="test-consumer" owner="wls"/>


    <!--dubbo这个服务所要暴露的服务地址所对应注册中心 -->
    <!--<dubbo:registry address="N/A"/> -->
    <!-- N/A 表示由 dubbo 自动分配地址。或者说是一种直连的方式，不通过注册中心。 -->
    <dubbo:registry address="zookeeper://10.168.1.101:2181" timeout="120000" check="false"/>

    <dubbo:consumer check="false"/>

    <!-- 协议解析 -->
    <dubbo:reference id="dubboService"
                     interface="com.learn.globelTrans.service.SentinelDubboService"
                     version="0.0.1"
                     timeout="60000"/>

</beans>
